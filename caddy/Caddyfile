# Global config - do not edit
trusted_proxies 172.16.0.0/12
{
}

# Authentication endpoint - do not edit
auth.localtest.me {
    reverse_proxy authelia:9091
}

# Exmple endpoint
https://whoami.localtest.me {
    # Block for enabling Authelia
    forward_auth authelia:9091 {
        uri /api/authz/forward-auth?authelia_url=https://auth.localtest.me/
        copy_headers Remote-User Remote-Groups Remote-Email Remote-Name
    }

    # SSL certificates
    tls /ssl/certs/cert.pem /ssl/certs/key.pem

    # Point reverse proxy to container whoami, port 80
    reverse_proxy whoami:80
}
